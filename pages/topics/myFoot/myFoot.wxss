/* pages/topics/myFoot/myFoot.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f2f2f2;
}

.nav-tabs {
  width: 100%;
  height: 130rpx;
  display: flex;
  background-color: #fff;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 50rpx;
  text-align: center;
  flex: 1;
  border-bottom: 1px solid #eee;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.active {
  line-height: 50rpx;
  text-align: center;
  color: #99cad8;
  flex: 1;
  border-bottom: 1px solid #99cad8;
  font-weight: bold;
  font-size: 28rpx;
}

.active1 {
  position: relative;
  line-height: 45rpx;
  text-align: center;
  color: #fff;
  flex: 1;
  border-bottom: 1px solid 99cad8;
  font-weight: bold;
  font-size: 32rpx;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  background-color: #99cad8;
  margin: 0 30%;
  

}



.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}

.point {
  position: relative;
  height: 10rpx;
  width: 10rpx;
  background-color: #99cad8;
  border-radius: 50%;
  bottom: 3rpx;
  margin: 0 48%;
  top: 13rpx;
}
