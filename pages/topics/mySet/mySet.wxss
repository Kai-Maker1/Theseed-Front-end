page{
  background-color: #f4f4f4;
}
.set{
  display: flex;
  margin-top: 25rpx;
  box-shadow: 1px 2px 3px #ddd;
  width: 750rpx;
}
.set-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 75rpx;
  width: 750rpx;
  padding:  0 20rpx;
  color: #000;
  background-color: #fff;
}
.set-item-text{
  width: 470rpx;
  font-size: 36rpx;
  line-height: 75rpx;
  height: 75rpx;
  font-weight: 400;
  padding: 0 60rpx;

}
.set-item-button{
  display: flex;
  line-height: 75rpx;
  top:20rpx; 
  /* background-color: #432; */
   
   
}
