/*swtich整体大小*/
.wx-switch-input{
width:98rpx !important;
height:45rpx !important;
background: #99cad8 !important;
border: #99cad8 !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
width:98rpx !important;
height: 45rpx !important;

}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
width: 48rpx !important;
height: 45rpx !important;

}
