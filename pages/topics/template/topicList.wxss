.my{
  margin: 5rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
-webkit-box-shadow: 0px -5px 49px -5px rgba(214,214,214,1);
-moz-box-shadow: 0px -5px 49px -5px rgba(214,214,214,1);
box-shadow: 0px -5px 49px -5px rgba(214,214,214,1);


}
.my .my-item{
  width: 750rpx;
  
  background: #ffffff;
  padding: 0
}
.my .my-item .myitem-icon{
  flex: 1;
}
.my .my-item .myitem-icon image{
  width: 58rpx;
  height: 38rpx;
  padding: 20rpx 40rpx;
  margin-left: 30rpx;
}
.my .my-item .myitem-icon i{
  width: 45rpx;
  height: 40rpx;
  padding: 20rpx 0;
  color: #bababa;
}
.my .my-item .myitem-name{
  
  flex: 4;
  text-align: left;
  
  font-size: 34rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 10rpx 0;
  padding-bottom: 0;
  margin-right: 80rpx;
  /* margin-bottom: 5rpx; */
  border-bottom: solid 1px #ebebeb;
}
.my .my-item:last-child .myitem-name{
  border-bottom: none;
}
