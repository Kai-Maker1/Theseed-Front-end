/**index.wxss**/
@import "/pages/common/banner.wxss";
@import "/pages/common/mainList.wxss";
@import "/pages/common/topBanner.wxss";
page {
  background-color: #EFEFEF;
}



.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}




/* 文档begin */

.class-doc {
  background: #fff;
  margin-bottom: 20rpx;
}
/*推荐课程*/
.class-title {
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333;
}

.class-doc-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 12rpx 10rpx 12rpx;
}

.class-doc-list-item {
  width: 339rpx;
  margin: 0rpx 12rpx 30rpx 12rpx;

  background-color:rgb(241, 241, 241); 

  flex-shrink: 0;
}

.class-doc-list-img-box {
  width: 339rpx;
  height: 200rpx;
  position: relative;

}
/*vedio-img*/
.class-doc-list-img-box-img {
  width: 339rpx;
  height: 180rpx;
  border-radius: 8rpx 8rpx 0 0;
  /*background-color:#333;*/
}

.end-state {
  position: absolute;
  left: 5rpx;
  bottom: 5rpx;
  font-size: 16rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 5rpx 10rpx;
  border-radius: 0rpx;
  color: #fff;
}
/*内置*/
.view-count {
  position: absolute;
  right: 0rpx;
  bottom:22rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 5rpx 10rpx;
  border-radius: 8rpx 0 0 0;
  font-size: 22rpx;
}

.view-count-text {
  color: #fff;
}

.class-doc-list-info-box {
  font-size: 32rpx;
  margin:8rpx 15rpx;
  color: #444;
/* background-color: #435 ; */
 position:relative;
 top:-10rpx;
font-weight:600;
}
.class-doc-list-info-box2 { 
  position:relative;
  /*background-color: #643;*/
  color: #444;
  margin: 8rpx 5rpx;
  padding-top:0rpx ;

}
.class-doc-list-info-box-teacher{
  
  font-size: 24rpx;  
  line-height: 30rpx;
  font-weight: bolder;
}
.class-doc-list-info-box-time{
  font-size: 20rpx;
  line-height: 30rpx;
}

.bottom-text {
  line-height: 90rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}
/* 文档end */
