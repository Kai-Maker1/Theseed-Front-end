.list-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 3px;
  box-shadow: 1px 2px 3px #ddd;
  padding: 20rpx;
  color: #fff;
}
.list-item.jw{
  background-color: #9f8bea;
}
.list-item.oa{
  background-color: #73b4ef;
}
.list-item.hy{
  background-color: #ffcb63;
}
.list-item.jz{
  background-color: #e78ab0;
}
.list-item.new{
  background-color: #7acfa6;
}
.list-item-image{
  flex: 0 0 60rpx;
  height: 80rpx;
  width: 80rpx;
  border-left: 1px solid #fff;
  margin-left: 25rpx;

}
.list-item-left{
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-right: 10rpx;
}
.list-item-title{
  font-size: 13pt;
  line-height: 175%;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
  
}
.list-item-time{
  font-size: 10pt;
  line-height: 125%;
  opacity: 0.6;
}
.list-item-icon{
  flex: 0 0 60rpx;
  height: 60rpx;
  width: 60rpx;
  border-left: 1px solid #fff;
  padding-left: 25rpx;
}