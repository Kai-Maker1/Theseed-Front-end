.des-item{
  background-color: #fff;
  padding: 10rpx 50rpx;
  margin-bottom: 20rpx;

  flex-direction: column;
}
.des-item-row{
  flex-direction: row;
}
.des-item-row-two{
  flex-direction: row;
  justify-content: space-between;
}

.des-item-tName{
  font-size: 42rpx;
  line-height:72rpx; 

  
}
.des-text-small{
  font-size: 22rpx;
  line-height: 42rpx;
}
.des-text-tMesN{
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: 800;

}
.des-text-tMes{
  font-size: 20rpx;
