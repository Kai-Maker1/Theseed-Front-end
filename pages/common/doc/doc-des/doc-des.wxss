}
.des-text-line5{
  text-indent: 2em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
}
.des-more{
  z-index: 5;
  position: relative;
  bottom: 0;
  background: linear-gradient( rgba(255, 255, 255, 0.8), rgba(242,242,242,1));
  
  text-align: center;
}
.des-image{
  border-radius: 50%;
  height: 80rpx;
