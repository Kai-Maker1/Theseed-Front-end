/* 标题 */
.top-title{
  width:750rpx;
  height:60rpx;
  background-color:#ddd;
}
.top-title-text{
  color:#222;
  font-size:26rpx;
  font-weight: 600;
  margin-left:30rpx;
  line-height: 60rpx;
}
/* 列表 */
.course{
  width:750rpx;
  height:150rpx;
  display: flex;
  /* background-color: #222; */
}
.course-img{
  margin-left:30rpx;
  margin-top:10rpx;
}
.course-image{
  width:220rpx;
  height:130rpx;
}
